  <script>
    document.getElementById("formulario").addEventListener("submit", function (e) {
      e.preventDefault();

      const respostas = new FormData(e.target);
      let pontos = 0;
      for (let valor of respostas.values()) {
        pontos += parseInt(valor);
      }

      const resultado = document.getElementById("resultado");

      if (pontos > 8) {
        resultado.innerHTML = `🎉 <span class="parabens">Parabéns! Você é uma forte candidata! 💖</span> 🎉`;
      } else {
        resultado.innerHTML = `Você fez ${pontos} ponto(s). Continue tentando! 😉`;
      }
    });
  </script>
